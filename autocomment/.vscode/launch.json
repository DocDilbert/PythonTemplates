    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: autocomment.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/autocomment/main.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH" : "${workspaceFolder}"
            },
            "args": ["--verbose"] // add arguments to test command line arguments
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}