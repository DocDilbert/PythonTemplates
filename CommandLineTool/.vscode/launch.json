    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: tool.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tool.py",
            "console": "integratedTerminal",
            "args": ["--sum", "5", "5", "5"] // add arguments to test command line arguments
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}